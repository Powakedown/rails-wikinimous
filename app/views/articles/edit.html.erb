<div class="content">
  <h1>Edition de l'article:</h1>

  <div class="buttons">
    <%= link_to article_path(@article) do %>
      <i class="fa fa-ban fa-2x"></i>
    <% end %>
    <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash-o fa-2x"></i>
    <% end %>
    <%= link_to articles_path(@article) do %>
      <i class="fa fa-home fa-2x"></i>
    <% end %>
  </div>

  <hr>

  <%= form_for @article, class: 'form-group' do |f| %>
  <div class="form-group">
      <label class="control-label required" for="article_title">Title</label>
      <%= f.text_field :title, class: 'form-control', size: 100 %>
  </div>
  <div class="form-group">
      <label class="control-label required" for="article_title">Content</label>
      <%= f.text_area :content, class: 'form-control', size: 100, rows: "50" %>
      <%= f.submit "Confirmer les modifications" %>
  <% end %>
  </div>


